{
  "name": "Hotel Hunter PWA",
  "short_name": "HotelHunter",
  "description": "Encontre hotéis, salve notas e explore recursos PWA avançados.",
  "start_url": "/index.html",
  "display": "standalone",
  "background_color": "#1a202c",
  "theme_color": "#1a202c",
  "orientation": "portrait-primary",
  "icons": [
    { "src": "https://placehold.co/72x72/4f46e5/ffffff?text=H", "type": "image/png", "sizes": "72x72" },
    { "src": "https://placehold.co/96x96/4f46e5/ffffff?text=H", "type": "image/png", "sizes": "96x96" },
    { "src": "https://placehold.co/128x128/4f46e5/ffffff?text=H", "type": "image/png", "sizes": "128x128" },
    { "src": "https://placehold.co/144x144/4f46e5/ffffff?text=H", "type": "image/png", "sizes": "144x144" },
    { "src": "https://placehold.co/152x152/4f46e5/ffffff?text=H", "type": "image/png", "sizes": "152x152" },
    { "src": "https://placehold.co/192x192/4f46e5/ffffff?text=H", "type": "image/png", "sizes": "192x192", "purpose": "any maskable" },
    { "src": "https://placehold.co/384x384/4f46e5/ffffff?text=H", "type": "image/png", "sizes": "384x384" },
    { "src": "https://placehold.co/512x512/4f46e5/ffffff?text=H", "type": "image/png", "sizes": "512x512" }
  ],
  "display_override": [
    "window-controls-overlay"
  ],
  "shortcuts": [
    {
      "name": "Encontrar Hotéis Próximos",
      "short_name": "Buscar",
      "description": "Busca por hotéis na sua localização atual",
      "url": "/index.html?action=find_hotels",
      "icons": [{ "src": "https://placehold.co/192x192/4f46e5/ffffff?text=Find", "sizes": "192x192" }]
    }
  ],
  "share_target": {
    "action": "/index.html",
    "method": "GET",
    "enctype": "application/x-www-form-urlencoded",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  },
  "file_handlers": [
    {
      "action": "/index.html",
      "accept": {
        "text/plain": [".txt", ".hotelgeo"]
      }
    }
  ],
  "protocol_handlers": [
    {
      "protocol": "web+hotelhunter",
      "url": "/index.html?query=%s"
    }
  ],
  "note_taking": {
      "new_note_url": "/index.html?action=new_note"
  },
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "side_panel": {
    "preferred_width": 320
  }
}

